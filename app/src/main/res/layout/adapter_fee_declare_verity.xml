<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tltms.driver.FeeDeclare.FeeDeclareRecordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:background="@drawable/frame_style_verity"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/tsOrderNo"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/startDate"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/LoadingOrderStyle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="30dp">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/startPlace"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="总申报费:"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/totalFee"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_height="30dp">
                <Button
                    android:text="查看"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:id="@+id/check"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
