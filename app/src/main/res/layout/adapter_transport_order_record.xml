<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:background="@drawable/frame_search_normal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tsOrderNo"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/projectName"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/consignorCity"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/consigneeCity"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/totalPackageQty"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/totalVolume"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/totalWeight"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
