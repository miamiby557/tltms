<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tltms.driver.loadingOrder.LoadingOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/line"
            android:background="@drawable/frame_search_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/ldOrderNo"
                    android:text="12222121"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="天图物流"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/company"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="2017-03-29"
                    android:id="@+id/startDate"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />

                <TextView
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    style="@style/LoadingOrderStyle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="30dp">
                <TextView
                    android:layout_weight="1"
                    android:text="广州市"
                    android:id="@+id/startPlace"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="15立方"
                    android:id="@+id/totalVolume"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                <TextView
                    android:layout_weight="1"
                    android:text="10吨"
                    android:id="@+id/totalWeight"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
