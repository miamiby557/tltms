<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_dialog_title_txt"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        style="@style/blackText"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="版本更新" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="服务器版本:"
            android:gravity="center|right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/serverVersion"
            android:textColor="@color/blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="当前版本:"
            android:gravity="center|right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/localVersion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/timepicker_dialog_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_dialog_cancel_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/colorDefault"
            />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/timepicker_dialog_bg" />

        <TextView
            android:id="@+id/common_dialog_confirm_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认更新"
            android:textColor="@color/colorDefault" />
    </LinearLayout>

</LinearLayout>